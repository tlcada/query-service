{
  "name": "query-service",
  "version": "1.0.0",
  "private": false,
  "description": "Demonstrate usage of Express.js, routes, Swagger and Prometheus metrics. It also works as a middleware with different database connections.",
  "main": "src/server.ts",
  "author": "tlcada",
  "keywords": [
    "Express",
    "Swagger",
    "Prometheus",
    "Mustache",
    "PostgreSQL",
    "Winston"
  ],
  "scripts": {
    "build": "tsc",
    "start": "nodemon",
    "test": "jest --ci",
    "test-watch": "jest --watch",
    "lint": "eslint . --ext .ts"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts",
      "config/**/*.ts",
      "views/**/*.html",
      "views/**/*.js"
    ],
    "ignore": [
      "**/__tests__/*"
    ],
    "ext": "ts,html,js",
    "exec": "npm run lint && cross-env NODE_ENV=development ts-node src/server.ts"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^12.0.4",
    "express": "^4.17.2",
    "express-basic-auth": "^1.2.1",
    "express-prom-bundle": "^6.4.1",
    "express-validator": "^6.14.0",
    "http-status-codes": "^2.2.0",
    "mustache-express": "^1.3.2",
    "node-fetch": "^2.6.6",
    "os-utils": "^0.0.14",
    "pg": "^8.7.1",
    "prom-client": "^14.0.1",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.5",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mustache-express": "^1.2.1",
    "@types/node": "^17.0.8",
    "@types/node-fetch": "^2.5.12",
    "@types/os-utils": "^0.0.1",
    "@types/pg": "^8.6.4",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
